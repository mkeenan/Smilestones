<!-- Adding children is the first step in the process. Next is adding milestones for each child. Children are only viewable by the user that created them. -->

<div class="container-fluid">
  <h2>My Children</h2>
  <br />
  <a class="btn btn-primary" <%= link_to 'Add a new child', new_child_path %></a>
  <br />
  <div "class=table-responsive">
    <table class="table table-condensed">

        <% @children.each do |c| %>
          <tr>
            <td><%= c.name %></td>
            <td><%= link_to "See Child Info", child_path(c) %></td>
            <td><%= link_to 'Edit', edit_child_path(c) %></td>
            <td><%= link_to 'Delete', child_path(c), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <br />
        <% end %>
    </table>
  </div>


  <hr>
  <!-- <a class="btn btn-primary"</a> -->
  <%= link_to 'Back', :root %>
</div>
